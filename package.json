{
  "name": "gitpayd",
  "version": "0.1.4",
  "description": "Github Workflows + BTC / LND, gitpayd watches your repo for new commits and sends payments to contributors",
  "scripts": {
    "clean": "rm -rf dist/",
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "tsc",
    "prestart": "echo '//declare var global: NodeJS.Global & typeof globalThis;' > ./node_modules/@types/node/globals.global.d.ts && npm run build",
    "test": "mocha"
  },
  "bin": {
    "gitpayd": "./dist/src/gitpayd.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hyahatiph-labs/gitpayd.git"
  },
  "keywords": [
    "bitcoin",
    "lightning",
    "network",
    "automation"
  ],
  "author": "hyahatiph-labs",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/hyahatiph-labs/gitpayd/issues"
  },
  "homepage": "https://github.com/hyahatiph-labs/gitpayd#readme",
  "dependencies": {
    "axios": "^0.21.1",
    "express": "^4.17.1",
    "prompt": "^1.1.0",
    "ts-node": "^9.1.1",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.35",
    "@types/prompt": "^1.1.0",
    "@types/yargs": "^16.0.1",
    "mocha": "^8.3.2",
    "tslint": "^6.1.3",
    "typescript": "^4.2.3"
  }
}
